%section.form
  = form_for @project do |f|
    .title
      = f.label :title
      = f.text_field :title
    .date
      = f.label "Start Date"
      .month.inline= f.select(:month, ('01'..'12').to_a)
      .day.inline= f.select(:day, ('01'..'31').to_a)
      .year.inline= f.select(:year, ((Time.now.year)..Time.now.year + 5).to_a)
    -#.time
      = f.label "Start Time"
      .hour.inline= f.select(:hour, ('01'..'12').to_a)
      .minute.inline= f.select(:minute, ('00'..'59').to_a)
      .am-pm.inline= f.select(:ampm, [['AM', 'AM'],['PM', 'PM']])
    .description
      = f.label :description
      = f.text_area :description, rows: 10
        
    = f.submit "Create Project"
