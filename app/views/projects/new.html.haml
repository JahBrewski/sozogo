%section.form
  = form_for @project do |f|
    .title
      = f.label :title
      = f.text_field :title
    .date
      = f.label "Start Date"
      .month.inline= f.select(:month, ('01'..'12').to_a)
      .day.inline= f.select(:day, ('01'..'31').to_a)
      .year.inline= f.select(:year, ((Time.now.year)..Time.now.year + 5).to_a)
    .time
      = f.label "Start Time"
      = f.time_select :start_time, { include_seconds: false, ampm: true }
    .recurring
      = f.label "Recurring?"
      = f.select_recurring :recurring_rules_attribute
    .description
      = f.label :description
      = f.text_area :description, rows: 10
      = f.label :number_of_volunteers_needed
    .volunteers-needed
      = f.text_field :number_of_volunteers_needed, class: "small-input"
        
    = f.submit "Create Project"
